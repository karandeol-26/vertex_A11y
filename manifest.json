{
  "manifest_version": 3,
  "name": "Vertex A11y",
  "description": "Scan the current page for common ADA/WCAG issues and compute a compliance score.",
  "version": "0.1.0",
  "action": { "default_popup": "popup.html" },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
